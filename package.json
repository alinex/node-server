{
  "name": "alinex-server",
  "version": "0.1.0",
  "title": "Web Server Integration",
  "description": "Let's you integrate a web server component easily into your application",
  "keywords": [
    "web",
    "server",
    "back-end"
  ],
  "copyright": "Alexander Schilling 2016-2017",
  "homepage": "https://alinex.gitbooks.io/server/",
  "repository": {
    "type": "git",
    "url": "https://github.com/alinex/node-server"
  },
  "bugs": "https://github.com/alinex/node-server/issues",
  "author": {
    "name": "Alexander Schilling",
    "email": "info@alinex.de",
    "web": "http://alinex.de"
  },
  "contributors": [],
  "license": "Apache-2.0",
  "main": "./dist/index",
  "types": "./dist/index",
  "scripts": {
    "setup": "rm -r ./node_modules && npm install",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "mocha -r ts-node/register test/mocha/**.ts",
    "coverage": "nyc mocha",
    "dev": "NODE_ENV=development DEBUG=test,server* nodemon -e js,json,ts --exec mocha",
    "demo": "NODE_ENV=development nodemon -e js,json,ts --exec ts-node -- ./test/demo/index.ts",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true
  },
  "directories": {
    "lib": "./dist"
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "debug": "^3.1.0",
    "es6-promisify": "^5.0.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.6.2",
    "inert": "^4.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.3",
    "@types/chalk": "^2.2.0",
    "@types/debug": "0.0.30",
    "@types/hapi": "^16.1.10",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.47",
    "async": "^2.5.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "codacy-coverage": "^2.0.3",
    "coveralls": "^3.0.0",
    "marked-man": "^0.2.1",
    "mocha": "^4.0.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "engines": {
    "node": ">=8"
  }
}
